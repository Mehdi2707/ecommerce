{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>Mon panier</h1>
        </div>

        <div class="col-12">
            <table class="table">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for element in dataPanier %}
                        <tr>
                            <td>{{ element.produit.name }}</td>
                            <td class="text-end">{{ element.produit.price / 100 }}€</td>
                            <td>{{ element.quantite }}</td>
                            <td class="text-end">{{ element.quantite * (element.produit.price / 100) }}€</td>
                            <td>
                                <a href="{{ path('cart_add', {id: element.produit.id}) }}" class="btn btn-success">Ajouter</a>
                                <a href="{{ path('cart_remove', {id: element.produit.id}) }}" class="btn btn-warning">Retirer 1</a>
                                <a href="{{ path('cart_delete', {id: element.produit.id}) }}" class="btn btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Votre panier est vide</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">Total</td>
                        <td class="text-end">{{ total }}€</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </section>
</main>
{% endblock %}
