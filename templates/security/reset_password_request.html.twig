{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    {% include '_partials/_header.html.twig' with {'titre': 'Réinitialiser mon mot de passe'} %}
    <section class="container my-3">
        <div class="row">
            <div class="col">
                {{ form_start(requestPassForm) }}
                    {{ form_row(requestPassForm.email) }}
                    <button type="submit" class="btn btn-primary">Envoyez</button>
                {{ form_end(requestPassForm) }}

            </div>
        </div>
    </section>
{% endblock %}
