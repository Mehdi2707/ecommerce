{% if pages > 1 %}
<div class="col-12 pb-1">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-3">
            {% if currentPage > 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(path, {slug: slug, page: currentPage - 1}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Précédent</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link" href="{{ path(path, {slug: slug, page: currentPage - 1}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Précédent</span>
                    </a>
                </li>
            {% endif %}
            {% for page in 1..pages %}
                <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                    <a class="page-link" href="{{ path(path, {slug: slug, page: page}) }}">{{ page }}</a>
                </li>
            {% endfor %}
            {% if currentPage < pages %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(path, {slug: slug, page: currentPage + 1}) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Suivant</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link" href="{{ path(path, {slug: slug, page: currentPage + 1}) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Suivant</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</div>
{% endif %}